{
    "multipart": [
        {   "when": { "up": "true" },
            "apply": { "model": "exfeatures:block/border_post" }
        },
        {   "when": { "north": "true" },
            "apply": { "model": "exfeatures:block/border_side", "uvlock": true }
        },
        {   "when": { "east": "true" },
            "apply": { "model": "exfeatures:block/border_side", "y": 90, "uvlock": true }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "exfeatures:block/border_side", "y": 180, "uvlock": true }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "exfeatures:block/border_side", "y": 270, "uvlock": true }
        }
    ]
}
